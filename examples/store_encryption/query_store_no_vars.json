{
    "variables": {},
    "pipeline":
        [
          {
            "$unwind": "$responses"
          },
          {
            "$group": {
              "_id": "$_id",
              "avg_rating": { "$avg": "$responses.rating" },
              "years_in_web3": { "$first": "$years_in_web3" }
            }
          },
          {
            "$sort": { "avg_rating": -1 }
          },
          {
            "$limit": 3
          },
          {
            "$project": {
              "_id": 1,
              "years_in_web3": {
                "%share": "$years_in_web3.%share"
              },
              "avg_rating": 1
            }
          }
        ]
    }
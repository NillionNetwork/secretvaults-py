{
    "variables": {
        "question_number": {
            "type": "number",
            "description": "The target question"
        }
    },
    "pipeline":
        [
          {
            "$match": {
              "responses.question_number": "##question_number"
            }
          },
          {
            "$group": {
              "_id": null,
              "total_years": { "$sum": "$years_in_web3.%share" },
              "count": { "$sum": 1 }
            }
          },
          {
            "$project": {
              "_id": 0,
              "sum_years_in_web3": {
                "%share": {
                  "$mod": [
                    "$total_years",
                    { "$add": [{ "$pow": [2, 32] }, 15] }
                  ]
                }
              },
              "user_count": "$count"
            }
          }
        ]
    }
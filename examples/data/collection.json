{
  "_id": "",
  "type": "standard",
  "name": "Test Collection",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "country_code": {
          "type": "object",
          "properties": {
            "%share": {
              "type": "string"
            }
          },
          "required": ["%share"]
        }
      },
      "required": ["_id", "name", "country_code"],
      "additionalProperties": false
    }
  }
}
